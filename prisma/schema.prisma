generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String  @unique
  email    String? @unique
  name     String?
  surname  String?
  score    Int?
  password String?
  gender   String?
  age      Int?
  role String?
  isSubscribed Boolean?
  isPrivacy    Boolean?
  isVerified   Boolean? @default(false)

  createdAt         DateTime  @default(now())
  updatedAt         DateTime? @default(now())
  // translator and validator related
  lastContribution  DateTime?
  contributions String[]
  validationEntries String[]
  reportedEntries   String[]

  // user lang settings
  languages  Json?
  tachelhit  Json?
  central    Json?
  tarifit    Json?
  other 	 Json?

  resetPasswordToken String? @unique
  resetPasswordTokenExpiration DateTime?
  emailVerificationToken String? @unique
  contribution Contribution[]
}

model Contribution {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  username String?
  // standard api parameters
  src         String?
  tgt         String?
  src_text    String?
  tgt_text    String?
  tgt_batch   String[]
  // src variantion check
  srcVar      String?
  // target variantion check
  tgtVar      String?
  // validation check, every validation will give validation +1
  validation  Int?
  // if an entry is has valiation score === +2 set isValidated to true and never show this entry again, if -2 then isDiscarded
  isValidated Boolean?
  isDiscarded Boolean?
  // is reported by any user
  isReported  Boolean?
  reportMsg  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}